<Page x:Class="PL.Pages.ManagerDrone"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Pages"
      xmlns:PL.Convert="clr-namespace:PL.Convert"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="700"
      Title="ManagerDrone">

    <Page.Resources>
        <PL.Convert:ConvertParcelToEnable x:Key="ParcelToEnable"/>
        <DataTemplate x:Key="MyDataTemplate"
 DataType="local:BO.DroneToList">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
 Text="Id Number: " />
                <TextBlock Grid.Column="1"
 Text="{Binding Path=IdNumber}" />
                <TextBlock Grid.Column="2"
 Text="Model: " />
                <TextBlock Grid.Column="3"
 Text="{Binding Path=Model}" />
                <TextBlock Grid.Column="4"
 Text="Max Weight: " />
                <TextBlock Grid.Column="5"
 Text="{Binding Path=MaxWeight}" />
                <Button Grid.Column="6" Height="25" Width="25" BorderBrush="{x:Null}" Background="{x:Null}" Click="deleteDrone">
                    <Button.Content>
                        <Image Source="/Pages/מחיקה.jpg" Width="25" Height="25"></Image>
                    </Button.Content>
                </Button>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>


        <Button x:Name="addingDrone" Background="{x:Null}" Height="88"  VerticalAlignment="Top"
                    Margin="494,222,114,0" Click="addingDrone_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Ellipse Stroke="#FF15486C" StrokeThickness="3">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/פלוס.jpg" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <ListView x:Name="DroneListView" ItemsSource="{Binding}" HorizontalContentAlignment="Center" ItemTemplate="{StaticResource MyDataTemplate}"  Margin="4,43,256,47" RenderTransformOrigin="0.5,0.5" SelectionChanged="selectionChange" MouseDoubleClick="Action" Background="{x:Null}">
            <ListView.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.118"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListView.RenderTransform>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Number" Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=IdNumber}" HorizontalAlignment="Center" FontSize="12" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Model" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Model}" HorizontalAlignment="Center" FontSize="12" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Max Weight" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=MaxWeight}" HorizontalAlignment="Center" FontSize="12" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="State" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=State}" HorizontalAlignment="Center" FontSize="12" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Delete" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Grid.Column="6" Height="25" Width="25" HorizontalAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" Click="deleteDrone">
                                    <Button.Content>
                                        <Image Source="/Pages/מחיקה.jpg" Width="25" Height="25"></Image>
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="468,76,0,0" Text="סינון על פי משקל חבילה מירבי" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="161" FontFamily="Aharoni"/>
        <TextBlock HorizontalAlignment="Left" Margin="479,33,0,0" Text="סינון על פי מצב רחפן" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="161" FontFamily="Aharoni"/>

        <ComboBox x:Name="State" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="468,49,0,0" VerticalAlignment="Top" Width="144" Height="27" SelectionChanged="groupState" FontFamily="Tahoma">
            <ComboBoxItem Content="Show All"></ComboBoxItem>
            <ComboBoxItem Content="Show By State"></ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="Weight" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="468,91,0,0" VerticalAlignment="Top" Width="144" Height="25" SelectionChanged="ComboBox"/>
        <ListView x:Name="AvilibleList" ItemsSource="{Binding}" Visibility="Collapsed" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource MyDataTemplate}"  Margin="32,30,184,298" RenderTransformOrigin="0.5,0.5" SelectionChanged="selectionChange" MouseDoubleClick="Action" Background="{x:Null}"/>
        <ListView x:Name="MaintanceList" ItemsSource="{Binding}" Visibility="Collapsed" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource MyDataTemplate}"  Margin="32,166,184,166" RenderTransformOrigin="0.5,0.5" SelectionChanged="selectionChange" MouseDoubleClick="Action" Background="{x:Null}"/>
        <ListView x:Name="ShippingList" ItemsSource="{Binding}" Visibility="Collapsed" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource MyDataTemplate}"  Margin="32,298,184,30" RenderTransformOrigin="0.5,0.5" SelectionChanged="selectionChange" MouseDoubleClick="Action" Background="{x:Null}"/>
        <Label x:Name="availibleLabel" Visibility="Collapsed" Content="Availible:" HorizontalAlignment="Left" Margin="127,4,0,0" VerticalAlignment="Top"/>
        <Label x:Name="maintanceLabel" Visibility="Collapsed" Content="Maintance:" HorizontalAlignment="Left" Margin="127,134,0,0" VerticalAlignment="Top"/>
        <Label x:Name="shipLabel" Content="Shipping:" Visibility="Collapsed" HorizontalAlignment="Left" Margin="127,272,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>



