<Page x:Class="PL.Pages.ManagerParcel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerParcel">
    <Page.Resources>
        <DataTemplate x:Key="MyDataTemplate"
 DataType="local:BO.ParcelOfList">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
 Text="Id: " />
                <TextBlock Grid.Column="1"
 Text="{Binding Path=IdNumber}" />
                <TextBlock Grid.Column="2"
 Text="Priority: " />
                <TextBlock Grid.Column="3"
 Text="{Binding Path=Priority}" />
                <TextBlock Grid.Column="5"
 Text="State: " />
                <TextBlock Grid.Column="6"
 Text="{Binding Path=ParcelState}" />
                <Button Grid.Column="8" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}" Click="deleteParcel">
                    <Button.Content>
                        <Image Source="/Pages/מחיקה.jpg" Width="30" Height="30"></Image>
                    </Button.Content>
                </Button>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ListView x:Name="ParcelListView" ItemsSource="{Binding}" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource MyDataTemplate}"  Margin="42,108,239,30" RenderTransformOrigin="0.5,0.5" SelectionChanged="selectionChange" MouseDoubleClick="Action" Background="{x:Null}"/>
        <ComboBox x:Name="Priority" HorizontalAlignment="Left" Foreground="RoyalBlue" Margin="620,171,0,0" VerticalAlignment="Top" Width="133" Height="22" SelectionChanged="ComboBoxChange" Background="{x:Null}" FontFamily="Aharoni"/>
        <TextBlock HorizontalAlignment="Left" Margin="639,155,0,0" Text="סינון על פי עדיפות החבילה " TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="161" FontFamily="Aharoni"/>
        <TextBlock HorizontalAlignment="Left" Margin="652,106,0,0" Text="סינון על פי מצב החבילה " TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="160" FontFamily="Aharoni"/>

        <ComboBox x:Name="State" Background="AliceBlue" BorderBrush="AliceBlue" HorizontalAlignment="Left" Foreground="RoyalBlue" ItemContainerStyle="{StaticResource comboBox}" Margin="620,122,0,0" VerticalAlignment="Top" Width="132" Height="21" SelectionChanged="ComboBoxChange" FontFamily="Aharoni" />

    </Grid>
</Page>
