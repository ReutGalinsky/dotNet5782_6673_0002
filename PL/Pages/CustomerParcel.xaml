<Page x:Class="PL.Pages.CustomerParcel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerParcel">
    <Page.Resources>
        <DataTemplate x:Key="MyDataTemplate"
 DataType="local:BO.ParcelOfList">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" />
                <TextBlock Grid.Column="1" />
                <TextBlock Grid.Column="2"
 Text="Priority: " />
                <TextBlock Grid.Column="3"
 Text="{Binding Path=Priority}" />
                <TextBlock Grid.Column="4"
 Text="state" />
                <TextBlock Grid.Column="5"
 Text="{Binding Path=ParcelState}" />
                <Button Grid.Column="6" Height="40" Width="40" BorderBrush="{x:Null}" Background="{x:Null}" Click="deleteParcel">
                    <Button.Content>
                        <Image Source="/Pages/מחיקה.jpg" Width="40" Height="40"></Image>
                    </Button.Content>
                </Button>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Button Background="{x:Null}" Height="99"  VerticalAlignment="Top"
                    Margin="652,309,45,0" Click="addParcel">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Ellipse Stroke="#FF15486C" StrokeThickness="3">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Pages/פלוס.jpg" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
        <ListView x:Name="ParcelListView" ItemsSource="{Binding}" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource MyDataTemplate}"  Margin="42,108,239,30" RenderTransformOrigin="0.5,0.5" SelectionChanged="selectionChange" MouseDoubleClick="Action" Background="{x:Null}"/>
        <ComboBox x:Name="State" HorizontalAlignment="Left" Margin="631,10,0,0" VerticalAlignment="Top" Width="144" Height="35" SelectionChanged="State_SelectionChanged"/>
       <ComboBox x:Name="Weight" HorizontalAlignment="Left" Margin="483,10,0,0" VerticalAlignment="Top" Width="133" Height="35" SelectionChanged="Weight_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="640,50,0,0" Text="סינון על פי מצב החבילה " TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="161" FontFamily="Aharoni"/>
        <TextBlock HorizontalAlignment="Left" Margin="490,50,0,0" Text="סינון על פי משקל החבילה " TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="161" FontFamily="Aharoni"/>

    </Grid>
</Page>
