<Page x:Class="PL.Pages.CustomerParcel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerParcel">
    <Page.Resources>
        <DataTemplate x:Key="MyDataTemplate"
 DataType="local:BO.ParcelOfList">

        </DataTemplate>
    </Page.Resources>
    <Grid>

                <Button Background="{x:Null}" Height="99"  VerticalAlignment="Top"
                    Margin="652,309,45,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Ellipse Stroke="#FF15486C" StrokeThickness="3">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/מינוס.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Background="{x:Null}" Height="93"  VerticalAlignment="Top"
                    Margin="651,211,45,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Ellipse Stroke="#FF15486C" StrokeThickness="3">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/קריאה.jpg" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
        <ListView x:Name="ParcelListView" ItemsSource="{Binding}" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource MyDataTemplate}"  Margin="42,108,239,30" RenderTransformOrigin="0.5,0.5" SelectionChanged="selectionChange" MouseDoubleClick="Action" Background="{x:Null}"/>

        <ComboBox x:Name="State" HorizontalAlignment="Left" Margin="631,10,0,0" VerticalAlignment="Top" Width="144" Height="35"/>
                <ComboBox x:Name="Idi" HorizontalAlignment="Left" Margin="483,10,0,0" VerticalAlignment="Top" Width="133" Height="35"/>
        <Button x:Name="reset" Content="איפוס" HorizontalAlignment="Left" Margin="399,13,0,0" VerticalAlignment="Top" Height="26" Width="51" Click="reset_Click" FontFamily="Aharoni"/>

    </Grid>
</Page>
