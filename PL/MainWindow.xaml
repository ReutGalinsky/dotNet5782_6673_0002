        <Grid.Background>
            <ImageBrush ImageSource="רקע.png"></ImageBrush>
        </Grid.Background>
        <Button x:Name="ListOfDrones" FontSize="24" HorizontalAlignment="Left" Margin="92,239,0,0" VerticalAlignment="Top" Height="154" Width="204" Click="clickDrones" RenderTransformOrigin="0,0">
